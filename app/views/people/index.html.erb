<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Friend?</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.name, person %></td>
        <td><%= person.email %></td>
        <td><%= current_person.friends.include? person %></td>
      </tr>
    <% end %>
  </tbody>
</table>