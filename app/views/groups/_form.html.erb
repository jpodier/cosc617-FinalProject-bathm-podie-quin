          <%= f.text_field :description, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :about %><br>
          <%= f.text_area :about, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "Submit", class: "btn btn-default" %>
        </div>
    <% end %>
  </div>
