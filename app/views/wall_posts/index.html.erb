<p id="notice"><%= notice %></p>

<h1>Listing Wall Posts</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Date</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wall_posts.each do |wall_post| %>
      <tr>
        <td><%= wall_post.text %></td>
        <td><%= wall_post.date %></td>
        <td><%= wall_post.person %></td>
        <td><%= link_to 'Show', wall_post %></td>
        <td><%= link_to 'Edit', edit_wall_post_path(wall_post) %></td>
        <td><%= link_to 'Destroy', wall_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wall post', new_wall_post_path %>
